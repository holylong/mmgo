<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container"
                android:background="@color/word_dark"
                tools:context=".FireWorksActivity">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:background="@drawable/particledashsharp"
		android:gravity="center"
		android:orientation="horizontal"
		android:padding="10dp"
	>
		
		<Button
			android:id="@+id/walk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="6dp"
			android:layout_weight="1"
			android:background="@drawable/paticlestylebtnsharp"
			android:padding="6dp"
			android:text="Walk"
			android:textColor="@color/word_dark"
			android:textSize="12dp"
		/>
		
		<Button
			android:id="@+id/run"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="6dp"
			android:layout_weight="1"
			android:background="@drawable/paticlestylebtnsharp"
			android:padding="6dp"
			android:text="Run"
			android:textColor="@color/word_dark"
			android:textSize="12dp"
		/>
		
		<Button
			android:id="@+id/jump"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="6dp"
			android:layout_weight="1"
			android:background="@drawable/paticlestylebtnsharp"
			android:padding="6dp"
			android:text="Jump"
			android:textColor="@color/word_dark"
			android:textSize="12dp"
		/>
	</LinearLayout>
	
	<fragment
		android:id="@+id/libgdxFrag"
		android:name="alex.com.gdxdemo.spine.LibgdxSpineFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="70dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		/>

</RelativeLayout>
